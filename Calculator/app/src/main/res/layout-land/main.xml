<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.calculator.app.MainActivity$PlaceholderFragment"
    android:background="@android:color/holo_orange_dark">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:id="@+id/linearLayout">

        <Button
            android:clickable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnCalc"
            android:id="@+id/Calc"
            android:layout_weight="1"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnConv"
            android:id="@+id/Conv"
            android:layout_weight="1"/>
    </LinearLayout>

    <EditText
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Box"
        android:layout_weight="1"
        android:layout_alignWithParentIfMissing="false"
        android:editable="true"
        android:enabled="true"
        android:gravity="right"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:baselineAligned="false"
        android:id="@+id/tableLayout"
        android:layout_marginLeft="102dp"
        android:layout_below="@+id/Box"
        android:layout_alignParentLeft="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn7"
                android:id="@+id/btn7"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/btn8"
                 android:id="@+id/btn8"
                android:layout_column="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/btn9"
                 android:id="@+id/btn9"
                android:layout_column="2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btnMul"
                android:id="@+id/btnMul"
                android:layout_column="3" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn4"
                android:id="@+id/btn4"
                android:layout_column="0" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/btn5"
                android:id="@+id/btn5" />

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="@string/btn6"
                android:id="@+id/btn6" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/btnDiv" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableLayout
                android:layout_span="4"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/btn1"
                        android:id="@+id/btn1"
                        android:layout_gravity="top"
                        android:layout_column="0"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:text="@string/btn2"
                    android:id="@+id/btn2"
                    android:layout_gravity="top"
                    android:layout_column="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:text="@string/btn3"
                    android:id="@+id/btn3"
                    android:layout_gravity="top" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                    android:text="+"
                    android:id="@+id/btnPlus"
                    android:layout_gravity="top" />
                </TableRow>

            </TableLayout>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="."
                    android:id="@+id/btnDot"
                android:layout_column="0" />

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn0"
                    android:id="@+id/btn0"
                    android:layout_span="2"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/btnMin" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:layout_alignTop="@+id/linearLayout3"
        android:layout_toRightOf="@+id/linearLayout3"
        android:layout_alignBottom="@+id/tableLayout">

        <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="C"
             android:id="@+id/btnClear"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEL"
            android:id="@+id/btnDel" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:id="@+id/btnAns" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_alignTop="@+id/tableLayout"
        android:layout_toRightOf="@+id/tableLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x^2"
            android:id="@+id/button"
            android:layout_alignTop="@+id/tableLayout"
            android:layout_toRightOf="@+id/tableLayout" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sqrt"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toLeftOf="@+id/linearLayout2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x^y"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toLeftOf="@+id/linearLayout2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cop"
            android:id="@+id/button4"
            android:layout_below="@+id/linearLayout3"
            android:layout_toRightOf="@+id/tableLayout" />
    </LinearLayout>


</RelativeLayout>

